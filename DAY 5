terraform {
  backend "s3" {
    bucket = "kamalesh-terraform-state-18236374"   # where the state file will be backed , create this bucket seperately
    key    = "day05/terraform.tfstate"               # path inside the bucket to store the state file
    region = "us-east-1"
    encrypt = true
    use_lockfile = true
  }

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 6.0"
    }
  }
}
variable "region" {
  default = "us-east-1"
  }

variable "environment" {
  default = "dev"
}

locals {
    vpc_name = "${var.environment}-vpc"
    bucket_name = "${var.environment}-bucket-18236374-${var.region}"
}
# Configure the AWS Provider
provider "aws" {
  region = var.region
}
# Create a VPC
resource "aws_vpc" "first_vpc" {
  cidr_block = "10.0.0.0/16"
  tags = {
    Name = var.environment

  }
}
# create a s3 bucket
resource "aws_s3_bucket" "first_bucket" {
  bucket = local.bucket_name

  tags = {
    Name        = "My bucket"
    Environment = var.environment
    vpc_id = aws_vpc.first_vpc.id
  }
}

output "vpc_id" {
  value = aws_vpc.first_vpc.id
}
output "s3_bucket_name" {
  value = aws_s3_bucket.first_bucket.bucket
}
